{
    "name": "Phoenix Configurator",
    "description": "Application required to change Phoenix configuration stored in EEPROM",
    "version": "0.1",
    "manifest_version": 2,
    "minimum_chrome_version": "23", 
    
    "app": {
        "background": {
            "scripts": [ "background.js" ]
        }
    },
    
    "permissions": [
        "serial",
        "storage",
        "fileSystem",
        "fileSystem.write"
    ]
}